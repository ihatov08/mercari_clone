<main class="w-11/12 flex-1 max-w-screen-xl mx-auto bg-white mt-24 pb-24 md:px-8 xl:px-0" id="contents">
  <div class="text-center w-full px-4 bg-white md:w-2/3 lg:w-1/2 mx-auto" id="input">
    <h1 class="font-black mb-8 text-2xl">プロフィール設定</h1>
    <%= form_with model: current_user, url: mypage_profile_path do |f| %>
      <div class="text-left">
        <div class="mb-8">
          <%= f.fields_for :profile do |profile| %>
            <%= profile.label :avatar, class: "block text-grey-500 text-sm font-bold mb-2" %>
            <div class="flex space-x-6 items-center">
              <%= image_tag current_user.profile.avatar.url, class: "mb-4 rounded-full w-16 h-16 md:w-24 md:h-24" %>
              <%= profile.file_field :avatar %>
              <%= profile.hidden_field :avatar_cache %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="text-left">
        <div class="mb-8">
          <%= f.label :nickname, class: "block text-grey-500 text-sm font-bold mb-2" %>
          <%= f.text_field :nickname, class: "appearance-none border border-gray-300 rounded py-2 px-3 text-grey-darker w-full"  %>
        </div>
        <div class="mb-8">
          <%= f.fields_for :profile do |profile| %>
            <%= profile.label :introduction, class: "block text-grey-500 text-sm font-bold mb-2" %>
            <div class="flex space-x-6 items-center">
              <%= profile.text_area :introduction, class: "border border-gray-300 rounded py-2 px-3 text-grey-darker h-32" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="text-left mt-12">
        <div class="text-center mb-2 flex flex-col space-y-4">
          <%= f.submit class: "text-base font-bold bg-red-500 text-white p-2 w-full block py-4 rounded-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</main>
