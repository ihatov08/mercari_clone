<main class="w-11/12 flex-1 max-w-screen-xl mx-auto bg-white mt-24 pb-24 md:px-8 xl:px-0" id="contents">
  <div class="text-center w-full px-4 bg-white md:w-2/3 lg:w-1/2 mx-auto" id="input">
    <h1 class="font-black mb-8 text-2xl">コメントの報告</h1>
    <%= form_with model: @report, url: comment_reports_path(@comment) do |f| %>
      <%= render partial: "shared/error_messages", locals: { resource: @report } %>
      <div class="text-left">
        <div class="mb-8">
          <%= f.label :report_reason, class: "block text-grey-500 text-sm font-bold mb-2" %>
          <%= f.collection_select :report_reason_id, ReportReason.all, :id, :name, { prompt: true }, class: "w-full text-black p-3 undefined border border-[#CDD6DD]" %>
        </div>
      </div>
      <div class="text-left">
        <div class="mb-8">
          <%= f.label :body, class: "block text-grey-500 text-sm font-bold mb-2" %>
          <%= f.text_area :body, class: "border border-gray-300 rounded py-2 px-3 text-grey-darker h-32 w-full" %>
        </div>
      </div>
      <div class="md:w-10/12 mx-auto">
        <div class="text-center mb-2 flex flex-col space-y-4">
          <%= f.submit "事務局に報告する", class: "text-base font-bold bg-red-500 text-white p-2 w-full block py-4 rounded-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</main>
